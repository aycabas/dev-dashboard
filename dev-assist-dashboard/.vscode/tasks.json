            }
        },
        {
            // Build and upload Teams manifest.
            // See https://aka.ms/teamsfx-debug-prepare-manifest-task to know the details and how to customize the args.
            "label": "Build & upload Teams manifest",
            "type": "teamsfx",
            "command": "debug-prepare-manifest",
